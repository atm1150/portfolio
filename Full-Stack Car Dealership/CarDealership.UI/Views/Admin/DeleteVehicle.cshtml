@model CarDealership.Models.Tables.Vehicle
@{
    ViewBag.Title = "DeleteVehicle";
}

<h2>DeleteVehicle</h2>

<div class="col-xs-12 col-sm-9">
    <div class="row">
        <div class="col-xs-12">
            <h3>Delete @Model.ModelID</h3>

            @using (Html.BeginForm())
            {
                @Html.HiddenFor(m => m.VehicleID)
                <p>Are you sure that you wish to delete the special @Html.DisplayFor(m => m.ModelID)?</p>
                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                @Html.ActionLink("Cancel", "Specials", "Admin", null, new { @class = "btn btn-sm btn-info" })
            }
        </div>
    </div>
</div>